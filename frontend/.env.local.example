# VibeCoder Marketplace - Frontend Environment Variables
# Copy this file to .env.local and fill in your actual values

# API Configuration
NEXT_PUBLIC_API_URL="http://localhost:5000/api"
NEXT_PUBLIC_API_VERSION="v1"
NEXT_PUBLIC_API_TIMEOUT="10000"

# Application Configuration
NEXT_PUBLIC_APP_NAME="VibeCoder Marketplace"
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_DESCRIPTION="Digital marketplace for Indian coders and developers"

# Razorpay Configuration (Public Keys Only)
NEXT_PUBLIC_RAZORPAY_KEY_ID="rzp_test_your_key_id"

# AWS CloudFront Configuration
NEXT_PUBLIC_CDN_URL="https://your-cloudfront-domain.com"

# File Upload Configuration
NEXT_PUBLIC_MAX_FILE_SIZE="524288000"  # 500MB in bytes
NEXT_PUBLIC_ALLOWED_FILE_TYPES="zip,rar,7z,tar,gz,pdf,doc,docx,txt,md"
NEXT_PUBLIC_MAX_SCREENSHOTS="5"

# External Services
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY="your_google_maps_api_key"

# Feature Flags
NEXT_PUBLIC_ENABLE_PWA="true"
NEXT_PUBLIC_ENABLE_ANALYTICS="true"
NEXT_PUBLIC_ENABLE_CHAT="false"

# Development Configuration
NEXT_PUBLIC_DEV_MODE="true"
