# VibeCoder Production Environment Configuration
# ⚠️ CRITICAL: Replace ALL placeholder values before deployment

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
NODE_ENV=production

# =============================================================================
# DOMAIN CONFIGURATION (⚠️ REPLACE WITH YOUR DOMAIN)
# =============================================================================
NEXT_PUBLIC_API_URL=https://yourdomain.com/api
NEXT_PUBLIC_APP_URL=https://yourdomain.com
FRONTEND_URL=https://yourdomain.com

# =============================================================================
# DATABASE CONFIGURATION (⚠️ GET FROM HOSTINGER POSTGRESQL PANEL)
# =============================================================================
DATABASE_URL=postgresql://your_db_user:your_secure_password@your_host:5432/your_database?sslmode=require

# =============================================================================
# JWT SECURITY (⚠️ GENERATE NEW 64-CHARACTER SECRETS)
# =============================================================================
# Generate at: https://www.allkeysgenerator.com/Random/Security-Encryption-Key-Generator.aspx
JWT_SECRET=REPLACE_WITH_64_CHARACTER_RANDOM_STRING_FOR_JWT_TOKENS
JWT_REFRESH_SECRET=REPLACE_WITH_64_CHARACTER_RANDOM_STRING_FOR_REFRESH_TOKENS
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# STRIPE PAYMENT CONFIGURATION (⚠️ USE LIVE KEYS ONLY)
# =============================================================================
STRIPE_SECRET_KEY=sk_live_your_actual_live_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_actual_live_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_live_webhook_secret_from_stripe_dashboard

# =============================================================================
# EMAIL CONFIGURATION (⚠️ USE GMAIL APP PASSWORD)
# =============================================================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-business-email@gmail.com
EMAIL_PASS=your_gmail_app_password_16_characters
EMAIL_FROM=noreply@yourdomain.com

# =============================================================================
# SECURITY CONFIGURATION (⚠️ KEEP THESE VALUES)
# =============================================================================
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SESSION_SECRET=REPLACE_WITH_64_CHARACTER_SESSION_SECRET
SESSION_SECURE=true
SESSION_HTTP_ONLY=true

# =============================================================================
# PRODUCTION SECURITY HEADERS (⚠️ KEEP THESE ENABLED)
# =============================================================================
HELMET_CSP_ENABLED=true
HELMET_HSTS_ENABLED=true
TRUST_PROXY=true

# =============================================================================
# FILE UPLOAD SECURITY
# =============================================================================
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,application/zip

# =============================================================================
# REDIS CONFIGURATION (⚠️ CONFIGURE IF AVAILABLE ON HOSTINGER)
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password_if_required

# =============================================================================
# AWS S3 CONFIGURATION (⚠️ OPTIONAL - FOR FILE STORAGE)
# =============================================================================
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-bucket-name

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
ENABLE_ANALYTICS=true

# =============================================================================
# FEATURE FLAGS
# =============================================================================
ENABLE_REVIEWS=true
ENABLE_PAYMENTS=true
ENABLE_FILE_UPLOADS=true
ENABLE_EMAIL_VERIFICATION=true

# =============================================================================
# INSTRUCTIONS FOR SECURE DEPLOYMENT:
# =============================================================================
# 1. Copy this file to .env.production
# 2. Replace ALL placeholder values with your actual values
# 3. Generate secure 64-character secrets for JWT and session
# 4. Use your actual domain name (not yourdomain.com)
# 5. Get database credentials from Hostinger PostgreSQL panel
# 6. Use LIVE Stripe keys (not test keys)
# 7. Set up Gmail App Password for email
# 8. Never commit this file to Git
# 9. Set these variables in Hostinger Node.js app settings
# 10. Test everything before going live

# =============================================================================
# SECURITY CHECKLIST:
# =============================================================================
# ✅ All secrets are 64+ characters and unique
# ✅ NODE_ENV=production
# ✅ Database password is strong (16+ chars)
# ✅ CORS only allows your domain
# ✅ SSL certificate is active
# ✅ Stripe keys are LIVE (not test)
# ✅ Email uses App Password (not regular password)
# ✅ File upload restrictions are active
# ✅ Rate limiting is enabled
# ✅ Security headers are configured
# ✅ No sensitive data in code/logs
