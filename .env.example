# Environment Configuration
NODE_ENV=production
BUILD_TARGET=production
FRONTEND_BUILD_TARGET=production

# Application URLs
NEXT_PUBLIC_API_URL=http://localhost:5000/api
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Port Configuration
BACKEND_PORT=5000
FRONTEND_PORT=3000
HTTP_PORT=80
HTTPS_PORT=443

# Database Configuration
POSTGRES_DB=vibecoder
POSTGRES_USER=vibecoder
POSTGRES_PASSWORD=vibecoder123
POSTGRES_PORT=5432
DATABASE_URL=postgresql://vibecoder:vibecoder123@localhost:5432/vibecoder

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis123

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Email Configuration (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@vibecoder.com

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# AWS Configuration (for file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=vibecoder-uploads

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf,application/zip

# Monitoring Configuration (Optional)
GRAFANA_PASSWORD=admin123

# SSL Configuration (Production)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Backup Configuration
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=vibecoder-backups

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Performance Configuration
NODE_OPTIONS=--max-old-space-size=1024
PM2_INSTANCES=max
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024

# Development Configuration
ENABLE_CORS=true
ENABLE_SWAGGER=false
ENABLE_DEBUG_LOGS=false

# Production Security
HELMET_CSP_ENABLED=true
HELMET_HSTS_ENABLED=true
TRUST_PROXY=true

# Cache Configuration
CACHE_TTL_SHORT=300
CACHE_TTL_MEDIUM=1800
CACHE_TTL_LONG=3600

# Session Configuration
SESSION_SECRET=your-session-secret-change-this
SESSION_MAX_AGE=86400000
SESSION_SECURE=false
SESSION_HTTP_ONLY=true

# API Configuration
API_VERSION=v1
API_PREFIX=/api
API_RATE_LIMIT=100
API_TIMEOUT=30000

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE_TIMEOUT=30000
DB_POOL_ACQUIRE_TIMEOUT=60000

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_RETRIES=3

# Webhook Configuration
WEBHOOK_TIMEOUT=10000
WEBHOOK_RETRIES=3
WEBHOOK_SECRET=your-webhook-secret

# Analytics Configuration
GOOGLE_ANALYTICS_ID=GA_MEASUREMENT_ID
ENABLE_ANALYTICS=false

# Feature Flags
ENABLE_REVIEWS=true
ENABLE_ANALYTICS=true
ENABLE_PAYMENTS=true
ENABLE_FILE_UPLOADS=true
ENABLE_EMAIL_VERIFICATION=true

# Third-party Integrations
SENTRY_DSN=your_sentry_dsn
MIXPANEL_TOKEN=your_mixpanel_token
INTERCOM_APP_ID=your_intercom_app_id
